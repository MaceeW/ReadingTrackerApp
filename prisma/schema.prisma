generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  books     Book[]   // Relation to Book model
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Book model stores reading list items
model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  status    String   @default("To Read") // Reading status: "To Read", "Reading", "Finished"
  cover_url String?  // Optional book cover image URL
  notes     String?  // Personal notes about the book
  userId    String   // Foreign key - links book to specific user for data privacy
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
